{
  "name": "simple-graphql",
  "version": "0.1.5",
  "description": "The simple way to build GraphQL style API with MySQL/PostreSQL",
  "main": "lib/index.js",
  "scripts": {
    "format": "standard --fix",
    "test": "jest",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "build": "rm -rf lib && babel src --optional runtime --out-dir lib/ && cp package.json lib/ && npm run build-dot-flow",
    "build-dot-flow": "find ./src -name '*.js' | while read filepath; do cp $filepath `echo $filepath | sed 's/\\/src\\//\\/lib\\//g'`.flow; done",
    "publish": "npm run flow && npm run format && npm run build"
  },
  "author": "logerzhu",
  "repository": {
    "type": "git",
    "url": "git@github.com:logerzhu/simple-graphql.git"
  },
  "bugs": {
    "url": "https://github.com/logerzhu/simple-graphql/issues"
  },
  "homepage": "https://github.com/logerzhu/simple-graphql",
  "license": "MIT",
  "keywords": [
    "GraphQL",
    "ORM",
    "Relay",
    "sequelize",
    "MySQL",
    "PostgreSQL"
  ],
  "dependencies": {
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "sequelize": "^3.30.2"
  },
  "peerDependencies": {
    "graphql": "^0.9.1",
    "graphql-relay": "^0.5.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.22.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "flow-bin": "^0.42.0",
    "graphql": "^0.9.1",
    "graphql-relay": "^0.5.1",
    "jest": "^19.0.2",
    "pre-commit": "^1.2.2",
    "standard": "^10.0.2"
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint",
    "ignore": [
      "/lib/",
      "/flow-typed/"
    ]
  },
  "pre-commit": [
    "format"
  ]
}
